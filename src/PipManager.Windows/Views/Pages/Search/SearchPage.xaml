<Page
    FontFamily="/PipManager.Windows;component/Resources/Fonts/MiSans-Regular.ttf#MiSans"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    Title="SearchPage"
    d:DataContext="{d:DesignInstance search:SearchPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    x:Class="PipManager.Windows.Views.Pages.Search.SearchPage"
    x:Name="Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:search="clr-namespace:PipManager.Windows.Views.Pages.Search"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:query="clr-namespace:PipManager.Core.Wrappers.PackageSearchIndexWrapper;assembly=PipManager.Core">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBox
                Grid.Column="0"
                Icon="{ui:SymbolIcon Search16}"
                VerticalAlignment="Stretch"
                x:Name="SearchTextBox" >
            </ui:TextBox>
            <ui:Button
                Appearance="Primary"
                Command="{Binding ViewModel.SearchCommand}"
                CommandParameter="{Binding ElementName=SearchTextBox, Path=Text}"
                FontSize="20"
                Grid.Column="2"
                Icon="{ui:SymbolIcon Search48}"
                IsDefault="True"
                Margin="5,0,0,0"
                VerticalAlignment="Stretch" />
        </Grid>

        <ui:ProgressRing
            Grid.Row="1"
            Height="80"
            HorizontalAlignment="Center"
            IsIndeterminate="True"
            VerticalAlignment="Center"
            Visibility="{Binding ViewModel.OnQuerying, Converter={StaticResource BoolToVisibility}}"
            Width="80" />

        <ui:ListView
            Grid.Row="1"
            ItemsSource="{Binding ViewModel.SearchResults, Mode=TwoWay}"
            Margin="0,7,0,7">
            <ui:ListView.ItemContainerStyle>
                <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
                <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                    <EventSetter Event="MouseDoubleClick"
                                 Handler="SearchListItem_DoubleClick"/>
                </Style>
            </ui:ListView.ItemContainerStyle>
            <ui:ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type query:IndexItemModel}">
                    <ui:TextBlock
                        Margin="5"
                        Style="{StaticResource BodyLargeTextBlockStyle}"
                        Text="{Binding}"
                        VerticalAlignment="Center" />
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
    </Grid>
</Page>